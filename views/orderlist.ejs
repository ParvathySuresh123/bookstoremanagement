<%- include('layouts/header'); -%>

<body>
    <%- include('layouts/titleheader'); -%>
    <%- include('layouts/adminnav'); -%>
    <section>
        <table class="table1">
            <thead>
                <tr>
                    <th>Customer Id</th>
                    <th>Book Id</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <%
                    for(var order of orders){
                        %>
                <tr>
                    <td><%= order.userId %></td>
                    <td><%= order.bookId %></td>
                    <td>$<%= order.price %></td>
                    <td><%= order.quantity %></td>
                    <td><a href="/editorder/<%= order._id%>"><i class='fas fa-edit' style='font-size:36px'></i></a></td>
                    <td><a href="/deleteorder/<%= order._id%>"  onclick="return confirm('Are you sure want to delete?');"><i class='fas fa-trash' style='font-size:36px;color:red'></i></a></td>
                </tr>
                <%
                    }
                %>
            </tbody>
        </table>
        <div class="b"><a id="add" href="/addorder">Add Order</a></div>
    </section>
</body>
<%- include('layouts/footer'); -%>
