<%- include('layouts/header'); -%>

<body>
    <%- include('layouts/titleheader'); -%>
    <%- include('layouts/adminnav'); -%>
    <section>
        <table class="table1">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Country</th>
                    <th>Is Admin?</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <%
                    for(var user of users){
                        %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.phone %></td>
                    <td><%= user.address %></td>
                    <td><%= user.country %></td>
                    <td><%= user.isadmin %></td>
                    <td><a href="/adminedit/<%= user._id%>"><i class='fas fa-edit' style='font-size:36px'></i></a></td>
                    <td><a href="/delete/<%= user._id%>" onclick="return confirm('Are you sure want to delete?');"><i class='fas fa-trash' style='font-size:36px;color:red'></a></td>
                </tr>
                <%
                    }
                %>
            </tbody>
        </table>
        <div class="b"><a id="add" href="/adduser">Add User</a></div>
    </section>
</body>
<%- include('layouts/footer'); -%>
